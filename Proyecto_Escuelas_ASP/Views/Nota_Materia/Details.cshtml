<!--Para poder acceder a la entidad de contacto-->
@model Proyecto_Escuelas_ASP.Models.Nota_Materia

@{
    ViewData["Title"] = "Detalles nota";
}
<div class="container">
    <h1 class="text-dark">Detalles de las Notas</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4 class="text-dark">Información de las Notas</h4>
            <dl class="row">
                <dt class="col-sm-4">Cédula del Estudiante:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Estudiantes.PersonaId)</dd>
                <dt class="col-sm-4">Fecha de Calificación:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCalificacion)</dd>
                <dt class="col-sm-4">Nota Obtenida:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NotaObtenida)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="bi bi-pencil-fill mx-2 mb-1"></i>Editar Notas
            </a>
        </div>
        <div class="col-md-6 text-md-right">
            <a class="btn btn-primary" asp-action="Index">
                <i class="bi bi-arrow-left-square mx-2 mt-1"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>
