@model Proyecto_Escuelas_ASP.Models.CursoMateria

@{
    ViewData["Title"] = "Crear asignacion";
}


<h4>Curso</h4>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class=" card-header bg-dark">
                <h4 class="text-warning"><strong>Crear Asignacion</strong></h4>
            </div>

        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CursoId" class="control-label"></label>
                    <select asp-for="CursoId" class="form-control ">
                        @foreach (var item in @ViewBag.Curso)
                        {
                            <option value="@item.Id">
                                @item.Nombre_Curso
                            </option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="MateriaId" class="control-label"></label>
                    <select asp-for="MateriaId" class="form-control ">
                        @foreach (var item in @ViewBag.Materia)
                        {
                            <option value="@item.Nombre_Materia">
                                @item.Nombre_Materia
                            </option>
                        }
                    </select>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" id="enviar" class="btn btn-secondary d-block mx-auto"><i class="bg-info bi-person-fill"></i> Crear </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}