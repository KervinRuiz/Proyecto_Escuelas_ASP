<!--Para poder acceder a la entidad de contacto-->
@model Proyecto_Escuelas_ASP.Models.Profesor

@{
    ViewData["Title"] = "Detalles profesor";
}



<div class="container">
    <h1 class="text-dark">Detalles del Profesor</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4 class="text-dark">Información del Profesor</h4>
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Personas.Nombre)</dd>
                <dt class="col-sm-4">Apellidos:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Personas.Apellidos)</dd>
                <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Personas.Fecha_Nacimiento)</dd>
                <dt class="col-sm-4">Sexo:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Personas.Sexo)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="bi bi-pencil-fill mx-2 mb-1"></i>Editar Profesor
            </a>
        </div>
        <div class="col-md-6 text-md-right">
            <a class="btn btn-primary" asp-action="Index">
                <i class="bi bi-arrow-left-square mx-2 mt-1"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>
