<!--Para poder acceder a la entidad de contacto-->
@model Proyecto_Escuelas_ASP.Models.Materia

@{
    ViewData["Title"] = "Detalles Materia";
}


<div class="container">
    <h1 class="text-dark">Detalles de la Materia</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4 class="text-dark">Información de la Materia</h4>
            <dl class="row">
                <dt class="col-sm-4">Nombre de la Materia:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre_Materia)</dd>
                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h4 class="text-dark">Profesor Asignado</h4>
            <dl class="row">
                <dt class="col-sm-4">ID del Profesor:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Profesores.PersonaId)</dd>
            </dl>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Nombre_Materia">
                <i class="bi bi-pencil-fill mx-2 mb-1"></i>Editar Materia
            </a>
        </div>
        <div class="col-md-6 text-md-right">
            <a class="btn btn-primary" asp-action="Index">
                <i class="bi bi-arrow-left-square mx-2 mt-1"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>
