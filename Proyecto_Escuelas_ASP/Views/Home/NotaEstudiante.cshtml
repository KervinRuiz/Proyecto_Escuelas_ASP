@model Proyecto_Escuelas_ASP.Models.Nota_Materia

<h1>Busca por tu número de cédula</h1>

<div class="card-body border">
    <div class="row">
        <form asp-controller="Nota_Materia" asp-action="NotaEstudiantePorID" method="get">
            <div class="form-group">
                <label asp-for="Estudiantes.PersonaId" class="form-label"></label>
                <input asp-for="Estudiantes.PersonaId" class="form-control" name="id" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
</div>



